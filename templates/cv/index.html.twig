{% extends 'base.html.twig' %}

{% block title %}Recevoir mon CV{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-r from-fuchsia-300 to-amber-200 flex items-center justify-center py-24 px-6">
        <div class="bg-white shadow-2xl rounded-3xl p-12 w-full max-w-xl">
            <h2 class="text-3xl font-bold text-center text-fuchsia-700 mb-8">
                Recevez mon CV par email
            </h2>

            {{ form_start(emailForm) }}
            <div class="mb-6 p-4">
                {{ form_row(emailForm.email, {
                    'attr': {
                        'class': 'w-full px-5 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-4 focus:ring-fuchsia-500 text-lg'
                    },
                    'label_attr': {
                        'class': 'block text-lg font-semibold text-gray-700 mb-2'
                    }
                }) }}
            </div>


            <button type="submit" class="w-full bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-bold py-3 px-6 rounded-xl shadow-md transition duration-300 text-lg">
                Envoyer le CV
            </button>
            {{ form_end(emailForm) }}

            {% for message in app.flashes('success') %}
                <p class="mt-8 text-green-800 text-center font-semibold bg-green-100 border border-green-300 rounded-xl px-6 py-4 text-lg">
                    {{ message }}
                </p>
            {% endfor %}

        </div>
    </div>
{% endblock %}
