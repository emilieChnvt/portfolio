{% extends 'base.html.twig' %}

{% block title %}Ajouter une image{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-black px-6 py-16">
        {{ form_start(form, { attr: { class: 'flex flex-col items-center space-y-6 w-full max-w-sm bg-white rounded-xl p-8 shadow-lg' } }) }}

        <label
            for="{{ form.imageFile.vars.id }}"
            class="cursor-pointer flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-lg p-10 text-gray-600 hover:border-fuchsia-500 hover:text-fuchsia-600 transition-colors duration-300 w-full text-center"
        >
            <span class="text-4xl mb-3">ðŸ“·</span>
            <span class="text-lg font-medium">Prendre une photo ou sÃ©lectionner un fichier</span>
            {{ form_widget(form.imageFile, {
                attr: {
                    accept: 'image/*',
                    capture: 'environment',
                }
            }) }}
        </label>

        <button
            type="submit"
            class="w-full bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-semibold py-3 rounded-lg shadow-md transition duration-300"
        >
            Envoyer
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
