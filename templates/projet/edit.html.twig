{% extends 'base.html.twig' %}

{% block title %}Modifier le projet{% endblock %}

{% block body %}
    <div class="min-h-screen px-6 py-16 bg-gradient-to-t from-fuchsia-50 via-white to-amber-50">
        <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-md p-10">
            <h1 class="text-4xl font-semibold text-fuchsia-800 mb-10 text-center">‚úèÔ∏è Modifier le projet</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {# Applique les classes Tailwind aux champs automatiquement #}
            {% for child in form %}
                <div>
                    {{ form_label(child, null, {'label_attr': {'class': 'block mb-2 font-medium text-gray-700'}}) }}
                    {{ form_widget(child, {'attr': {
                        'class': 'block w-full rounded-md border border-gray-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-fuchsia-500'
                    }}) }}
                    {{ form_errors(child, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>
            {% endfor %}

            <button
                type="submit"
                class="w-full bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-semibold py-3 rounded-lg shadow-md transition duration-300"
            >
                üíæ {{ button_label|default('Enregistrer les modifications') }}
            </button>

            {{ form_end(form) }}

            <div class="mt-8 text-center">
                {{ include('projet/_delete_form.html.twig') }}
            </div>

            <div class="mt-6 text-center">
                <a href="{{ path('app_admin') }}" class="text-fuchsia-600 hover:text-fuchsia-800 font-medium underline transition duration-200">
                    ‚Üê Retour √† la liste des projets
                </a>
            </div>
        </div>
    </div>
{% endblock %}
