{% extends 'base.html.twig' %}

{% block title %}New Projet{% endblock %}

{% block body %}
    <h1>Create new Projet</h1>

    {{ form_start(form, {attr: {class: 'space-y-6'}}) }}

    {# Render all fields with custom classes #}
    {% for child in form %}
        <div>
            {{ form_label(child, null, {attr: {class: 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(child, {attr: {class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            {{ form_errors(child) }}
        </div>
    {% endfor %}

    <button type="submit" class="mt-4 w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-md">
        {{ button_label|default('Save') }}
    </button>

    {{ form_end(form) }}


    <a href="{{ path('app_projet_index') }}">back to list</a>
{% endblock %}
