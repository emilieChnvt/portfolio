{% extends 'base.html.twig' %}

{% block title %}Nouveau projet{% endblock %}

{% block body %}
    <div class="min-h-screen px-6 py-16 bg-gradient-to-t from-fuchsia-50 via-white to-amber-50 flex items-center justify-center">
        <div class="w-full max-w-3xl bg-white rounded-xl shadow-md p-10">
            <h1 class="text-4xl font-semibold text-fuchsia-800 mb-10 text-center">âž• Ajouter un nouveau projet</h1>

            {{ form_start(form, {attr: {class: 'space-y-6'}}) }}

            {% for child in form %}
                <div>
                    {{ form_label(child, null, {attr: {class: 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(child, {attr: {class: 'mt-1 block w-full rounded-md border border-gray-300 px-4 py-3 shadow-sm focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-fuchsia-500 sm:text-sm'}}) }}
                    <div class="text-red-600 text-sm mt-1">
                        {{ form_errors(child) }}
                    </div>
                </div>
            {% endfor %}

            <button type="submit" class="mt-6 w-full bg-fuchsia-600 hover:bg-fuchsia-700 text-white font-semibold py-3 rounded-lg shadow-md transition duration-300">
                {{ button_label|default('Enregistrer') }}
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
